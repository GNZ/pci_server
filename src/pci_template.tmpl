<% c++ #include "main_screen_content.h" %>  
<% skin main_screen_skin %>
<% view welcome uses main_screen_content::content %>  
<% template render() %>  
<html> 
	<head>
	    <link href="/css/basic_style.css" rel="stylesheet" type="text/css">
	</head>
	<body>
		<div class="content">
			<h1>Bienvenido <%= user_id %>!</h1>
			<div class = "button_wrapper">
				<div class = "big_button" id="problems" onclick="location.href='/pci/problemsHome'">
					Problemas
				</div>
				<div class = "big_button" id="ideas" onclick="location.href='/pci/ideasHome'">
					Ideas
				</div>
			</div>
		</div>
	</body>  
<html>  
<% end template %>  
<% end view %>  

<% view problemsHome uses main_screen_content::problemsHome %>  
<% template render() %>
<html> 
	<head>
	    <link href="/css/problemsHome.css" rel="stylesheet" type="text/css">
	</head>
	<body>
		<div class="content">
			<h1>Problemas</h1>
			<div class = "button_wrapper">
				<% foreach problem in *problems %>  
 					<% item %>
						<div class = "publication" onclick="location.href='/pci/problem/<%= problem->id %>'">
							<%= problem->id %>:<%= problem->description %>
						</div>  
  					<% end %>
					<% empty %>  
  					<h2>No problems</h2>
				<% end %>
			</div>
		</div>
	</body>  
<html>  
<% end template %>  
<% end view %>  

<% view problemInfo uses main_screen_content::problemInfo %>  
<% template render() %>
<html> 
	<head>
	    <link href="/css/problemsHome.css" rel="stylesheet" type="text/css">
	</head>
	<body>
		<div class="content">
			<h1>Problema <%= problem->id %></h1>
			<div class = "button_wrapper">
				<div class = "publication">
					Descripcion: <%= problem->description %>
				</div>
			</div>
			<h2>Aclaraciones</h2>
			<% foreach clarification in *clarifications %>
				<% item %>
					<div class = "publication">
						ID: <%= clarification->id %> Pregunta: <%= clarification->question %>
						Respuesta: <%= clarification->answer %>
					</div>
				<% end %>
				<% empty %>
				No hay aclaraciones
			<% end %>
			<h2>Solucion</h2>
			<% if problem->is_solved %>
				<div class= "publication">
					Descripcion: <%= accepted_solution->description %>
				</div>
			<% else %>
				<p>No hay una solucion aceptada</p>
			<% end %>
			<h2>Soluciones Propuestas</h2>
			<% foreach solution in *solutions %>
				<% item %>
					<div class = "publication">
						ID: <%= solution->id %> Descripcion: <%= solution->description %>
					</div>
				<% end %>
				<% empty %>
				No hay soluciones propuestas
			<% end %>
		</div>
	</body>  
<html>  
<% end template %>  
<% end view %>  
<% end skin %>  